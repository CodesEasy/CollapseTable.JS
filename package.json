{
  "name": "@codeseasy/collapsetable",
  "version": "1.1.1",
  "description": "CollapseTable: lightweight, dependency-free JS to make HTML tables responsive by collapsing overflow columns into per-row details (+/âˆ’ toggle).",
  "homepage": "https://github.com/CodesEasy/CollapseTable.JS#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodesEasy/CollapseTable.JS.git"
  },
  "bugs": {
    "url": "https://github.com/CodesEasy/CollapseTable.JS/issues"
  },
  "author": "Vishnu (Codes Easy) <https://vishnu.wiki> (https://www.codeseasy.com)",
  "license": "MIT",
  "keywords": [
    "table",
    "responsive",
    "collapse",
    "details",
    "javascript",
    "library"
  ],

  "main": "dist/collapsetable.js",
  "browser": "dist/collapsetable.js",
  "types": "dist/collapsetable.d.ts",
  "unpkg": "dist/collapsetable.min.js",
  "jsdelivr": "dist/collapsetable.min.js",

  "exports": {
    ".": {
      "types": "./dist/collapsetable.d.ts",
      "require": "./dist/collapsetable.js",
      "import": "./dist/collapsetable.js",
      "default": "./dist/collapsetable.js"
    }
  },

  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "npm_usage.md"
  ],

  "sideEffects": false,

  "scripts": {
    "clean": "rimraf dist",
    "build:js": "cpy src/CollapseTable.js dist --rename=collapsetable.js --flat && terser dist/collapsetable.js --compress --mangle --source-map \"content=inline, url=collapsetable.min.js.map\" -o dist/collapsetable.min.js",
    "build:types": "cpy src/types/collapsetable.d.ts dist --rename=collapsetable.d.ts --flat",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },

  "devDependencies": {
    "cpy-cli": "^6.0.0",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1"
  },

  "publishConfig": {
    "access": "public"
  },

  "engines": {
    "node": ">=14"
  }
}
